rules_version = '2';
service cloud.firestore {

  match /databases/{database}/documents {
    function isLoggedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isLoggedIn() && resource != null && (userId == request.auth.uid);
    }

    match /users/{userId} {
      allow create: if isLoggedIn() && resource==null;
      allow get, update, delete: if isOwner(userId);
      // no body should be able to get list of users
      allow list: if false;
    }
  }
}